{
  "manifest_version": 3,
  "name": "Floating Console",
  "version": "1.0.5",
  "description": "Draggable console overlay with dark/light modes",
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "./src/icons/icon16.png",
    "48": "./src/icons/icon48.png",
    "128": "./src/icons/icon128.png"
  },
  "action": {
    "default_popup": "./src/popup.html",
    "default_icon": {
      "16": "./src/icons/icon16.png",
      "48": "./src/icons/icon48.png",
      "128": "./src/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "./src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./src/content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/inject.js", "src/icons/*.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-console": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle floating console visibility"
    },
    "toggle-float": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Toggle floating button visibility"
    }
  }
}
